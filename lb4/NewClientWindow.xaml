        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            Grid.Row="2"
            >First Name
        </TextBlock>
        <TextBox
            x:Name="first_name_textbox"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            Grid.Row="3"
            />

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            Grid.Row="4"
            >Second Name
        </TextBlock>
        <TextBox
            x:Name="second_name_textbox"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            Grid.Row="5"
            />

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            Grid.Row="6"
            >Patronymic
        </TextBlock>
        <TextBox
            x:Name="patronymic_textbox"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            Grid.Row="7"
            />

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            Grid.Row="8"
            >Age
        </TextBlock>
        <TextBox
            x:Name="age_textbox"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            Grid.Row="9"
            />

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            Grid.Row="10"
            >Workplace
        </TextBlock>
        <TextBox
            x:Name="workplace_textbox"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            Grid.Row="11"
            />

        <Button
            x:Name="save_button"
            Width="100"
            Height="30"
            Content="Save"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Click="clickSaveButton"
            IsDefault="True"
            />
        <Button
            x:Name="cancel_button"
            Width="100"
            Height="30"
            Content="Cancel"
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.Column="1"
            Click="clickCancelButton"
            IsCancel="True"
            />

